<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/tv_submit_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="发布"
        android:gravity="center"
        android:textSize="18dp"
        android:background="#fff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/ll_submit"
        android:layout_below="@id/tv_submit_title"
        android:padding="5dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_submit_content"
            android:padding="10dp"
            android:hint="写点您想发布的内容......"
            android:textSize="15dp"
            android:background="#0000"
            android:maxLines="10" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_submit"
        android:layout_below="@id/ll_submit"
        android:layout_marginTop="10dp"
        android:background="#fff">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/bt_submit"
        android:layout_below="@id/rv_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="发布"
        android:textSize="15dp"
        android:textColor="#fff"
        android:background="@drawable/shape_choose_user_button_bg"/>
</RelativeLayout>
