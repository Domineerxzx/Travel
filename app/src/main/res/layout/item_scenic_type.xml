<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/tv_scenic_type_name"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/line"
        android:text="分类名称：" />
    <EditText
        android:id="@+id/et_scenic_type_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_admin_edit_bg"
        android:hint="请输入分类名称"
        android:textSize="15dp"
        android:layout_alignBottom="@id/tv_scenic_type_name"
        android:layout_alignTop="@id/tv_scenic_type_name"
        android:layout_toRightOf="@id/tv_scenic_type_name"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"/>

</RelativeLayout>