<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/logo"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_back_to_choose"
        android:background="@mipmap/back"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="用户登录"
        android:textStyle="bold"
        android:textColor="@color/userColor"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/tv_user_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="手机号："
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_user_phone_number"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:hint="请输入手机号"
        android:background="@drawable/shape_user_edit_bg"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_user_phone_number"
        android:paddingLeft="10dp"
        android:inputType="textEmailAddress"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_user_phone_number"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="密码："
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_user_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="请输入密码"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_user_password"
        android:inputType="textPassword"
        android:background="@drawable/shape_user_edit_bg"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="12dp" />


    <Button
        android:id="@+id/bt_user_login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_user_password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_choose_user_button_bg"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="12dp" />

    <Button
        android:id="@+id/bt_user_create"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bt_user_login"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_create_button_bg"
        android:text="还没有账号？创建一个！"
        android:textColor="#fff"
        android:textSize="12dp" />

</RelativeLayout>