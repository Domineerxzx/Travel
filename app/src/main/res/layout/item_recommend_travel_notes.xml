<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/iv_recommend"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_recommend"
        android:id="@+id/tv_recommend_title"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:maxLines="2"
        android:textSize="15dp"
        android:textColor="#000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recommend_title"
        android:id="@+id/tv_recommend_abstract"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:maxLines="4"
        android:textSize="15dp"
        android:ellipsize="end"
        android:textColor="@color/line" />


</RelativeLayout>