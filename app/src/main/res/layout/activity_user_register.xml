<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/logo"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_back_to_user_login"
        android:background="@mipmap/back"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="用户注册"
        android:textColor="@color/userColor"
        android:textStyle="bold"
        android:textSize="20dp" />



    <TextView
        android:id="@+id/tv_user_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="用户名："
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_user_username"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/tv_user_username"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/shape_user_edit_bg"
        android:hint="请输入用户名(长度小于20个字符)"
        android:inputType="text"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_user_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_user_username"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="手机号："
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_user_phone_number"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/tv_user_phone_number"
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_user_edit_bg"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_user_request_code"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_user_phone_number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="验证码"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_user_request_code"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@id/tv_user_request_code"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/shape_user_edit_bg"
        android:hint="请输入验证码"
        android:inputType="number"
        android:textSize="12dp" />

    <Button
        android:id="@+id/bt_user_request_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/et_user_request_code"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/et_user_request_code"
        android:layout_toRightOf="@id/et_user_request_code"
        android:text="获取验证码"
        android:textColor="#fff"
        android:textSize="12dp"
        android:background="@drawable/shape_choose_user_button_bg"/>
    <TextView
        android:id="@+id/tv_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_user_request_code"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="密码："
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_user_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/tv_user_password"
        android:layout_marginLeft="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_user_edit_bg"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textSize="12dp" />

    <CheckBox
        android:id="@+id/cb_user_agree"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/et_user_password"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/cb_user_agree"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/cb_user_agree"
        android:text="您同意遵守我们的条款与条件、隐私政策、个人敏感信息政策。"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:textSize="10dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/bt_user_register"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cb_user_agree"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_choose_user_button_bg"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="12dp" />

    <Button
        android:id="@+id/bt_user_login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bt_user_register"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_create_button_bg"
        android:text="已有有账号？去登录！"
        android:textColor="#fff"
        android:textSize="12dp" />

</RelativeLayout>